
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Représente un utilisateur du système.",
      "properties": {
        "name": { "type": "string" },
        "username": { "type": "string" },
        "role": { "type": "string" },
        "password": { "type": "string" },
        "status": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "name", "role", "password"]
    },
    "Client": {
      "title": "Client",
      "type": "object",
      "description": "Représente un client du magasin.",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "mutuelle": { "type": "string" },
        "lastVisit": { "type": "string" },
        "ordersCount": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "phone"]
    },
    "Sale": {
      "title": "Sale",
      "type": "object",
      "description": "Représente une vente/facture.",
      "properties": {
        "invoiceId": { "type": "string" },
        "clientName": { "type": "string" },
        "clientPhone": { "type": "string" },
        "mutuelle": { "type": "string" },
        "total": { "type": "number" },
        "remise": { "type": "number" },
        "discountType": { "type": "string" },
        "discountValue": { "type": "number" },
        "avance": { "type": "number" },
        "reste": { "type": "number" },
        "statut": { "type": "string" },
        "monture": { "type": "string" },
        "verres": { "type": "string" },
        "purchasePriceFrame": { "type": "number" },
        "purchasePriceLenses": { "type": "number" },
        "prescription": { "type": "object" },
        "payments": { 
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "amount": { "type": "number" },
              "date": { "type": "string", "format": "date-time" }
            }
          }
        },
        "notes": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Représente un mouvement de flux de caisse (dépense, apport, versement, paiement vente).",
      "properties": {
        "type": { "type": "string", "enum": ["VENTE", "DEPENSE", "APPORT", "VERSEMENT"] },
        "category": { "type": "string" },
        "label": { "type": "string" },
        "montant": { "type": "number" },
        "relatedId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "montant", "label"]
    },
    "Settings": {
      "title": "Settings",
      "type": "object",
      "description": "Configuration du magasin.",
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "icePatent": { "type": "string" },
        "logoUrl": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "User",
      "description": "Collection des utilisateurs."
    },
    "/clients/{clientId}": {
      "schema": "Client",
      "description": "Collection des clients."
    },
    "/sales/{saleId}": {
      "schema": "Sale",
      "description": "Collection des ventes."
    },
    "/transactions/{transactionId}": {
      "schema": "Transaction",
      "description": "Collection des flux de caisse."
    },
    "/settings/shop-info": {
      "schema": "Settings",
      "description": "Informations du magasin."
    }
  }
}
