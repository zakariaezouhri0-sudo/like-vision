
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Représente un utilisateur du système.",
      "properties": {
        "name": { "type": "string" },
        "username": { "type": "string" },
        "role": { "type": "string" },
        "password": { "type": "string" },
        "status": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "name", "role", "password"]
    },
    "Client": {
      "title": "Client",
      "type": "object",
      "description": "Représente un client du magasin.",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "mutuelle": { "type": "string" },
        "lastVisit": { "type": "string" },
        "ordersCount": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "phone"]
    },
    "Sale": {
      "title": "Sale",
      "type": "object",
      "description": "Représente une vente/facture.",
      "properties": {
        "invoiceId": { "type": "string" },
        "clientName": { "type": "string" },
        "clientPhone": { "type": "string" },
        "mutuelle": { "type": "string" },
        "total": { "type": "number" },
        "remise": { "type": "number" },
        "avance": { "type": "number" },
        "reste": { "type": "number" },
        "statut": { "type": "string" },
        "monture": { "type": "string" },
        "verres": { "type": "string" },
        "prescription": { "type": "object" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "User",
      "description": "Collection des utilisateurs."
    },
    "/clients/{clientId}": {
      "schema": "Client",
      "description": "Collection des clients."
    },
    "/sales/{saleId}": {
      "schema": "Sale",
      "description": "Collection des ventes."
    }
  }
}
