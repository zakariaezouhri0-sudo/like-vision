rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // RÈGLES DE SÉCURITÉ OUVERTES POUR DÉVELOPPEMENT
    // Redéploiement forcé pour résoudre l'erreur de permission détectée
    // ID de résolution : PERM_FIX_V20240301_2115_FULL_OPEN
    match /{document=**} {
      allow read, write: if true;
    }
  }
}